# ===========================================
# LONG LIFE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local for development
# Set these in Vercel for production
# ===========================================

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Production: https://longlife.com

# -------------------------------------------
# Sanity CMS
# -------------------------------------------
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
# Get from: https://sanity.io → Project Settings → Project ID

NEXT_PUBLIC_SANITY_DATASET=production
# Use "production" for live site, "staging" for testing

NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
# Keep this value unless Sanity releases breaking changes

# -------------------------------------------
# Sanity API Tokens
# -------------------------------------------
SANITY_READ_TOKEN=your_read_token_here
# Get from: Sanity → API → Tokens → Add API Token (Viewer role)
# Required for: Preview mode, fetching draft content

SANITY_WRITE_TOKEN=your_write_token_here
# Get from: Sanity → API → Tokens → Add API Token (Editor role)
# Required for: Seed script, content mutations

# -------------------------------------------
# Webhooks & Revalidation
# -------------------------------------------
SANITY_REVALIDATE_SECRET=your_random_secret_here
# Generate: openssl rand -base64 32
# Required for: Instant content updates via webhook
# Configure webhook in Sanity: Manage → API → Webhooks
#   URL: https://longlife.com/api/revalidate
#   Secret: Use the same value as this variable

# -------------------------------------------
# Preview Mode (Optional)
# -------------------------------------------
PREVIEW_SECRET=your_preview_secret_here
# Generate: openssl rand -base64 32
# Required for: Live preview in Sanity Studio

# -------------------------------------------
# Analytics (Optional)
# -------------------------------------------
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here
# Auto-configured in Vercel dashboard
# Enable: Vercel → Project → Analytics tab

# Google Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -------------------------------------------
# Email Integrations (Optional - TODO)
# -------------------------------------------
# Uncomment and configure when ready to connect email provider

# Mailchimp
# MAILCHIMP_API_KEY=your_mailchimp_api_key
# MAILCHIMP_LIST_ID=your_mailchimp_list_id
# MAILCHIMP_SERVER_PREFIX=us1

# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# ConvertKit
# CONVERTKIT_API_KEY=your_convertkit_api_key
# CONVERTKIT_FORM_ID=your_form_id

# -------------------------------------------
# Error Monitoring (Optional)
# -------------------------------------------
# Sentry
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# -------------------------------------------
# Security (Optional)
# -------------------------------------------
# reCAPTCHA v3
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# -------------------------------------------
# Stripe Payment Processing
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Get from: https://dashboard.stripe.com/test/apikeys
# Use test keys (sk_test_) for development
# Use live keys (sk_live_) for production

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get from: https://dashboard.stripe.com/test/apikeys
# Safe to expose in client-side code

STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
# Get from: https://dashboard.stripe.com/test/webhooks
# Create endpoint: https://longlife.com/api/stripe/webhook
# Copy the signing secret after creating the webhook

STRIPE_BILLING_PORTAL_RETURN_URL=http://localhost:3000/account
# URL where customers return after managing subscription
# Production: https://longlife.com/account

# -------------------------------------------
# Supabase (Authentication & Database)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Get from: https://supabase.com/dashboard → Project Settings → API
# Your unique Supabase project URL

NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Get from: https://supabase.com/dashboard → Project Settings → API
# Public anon key (safe to expose in client-side code)

SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
# Get from: https://supabase.com/dashboard → Project Settings → API
# Secret key for server-side admin operations (webhooks, etc.)
# NEVER expose this in client-side code!

# -------------------------------------------
# Development Only
# -------------------------------------------
# Uncomment for local debugging
# DEBUG=true
# NEXT_PUBLIC_DEBUG_MODE=true
